{
  xdg.mimeApps = {
    enable = true;
    associations.added = {
      "text/html" = "zen-beta.desktop";
      "text/plain" = "notepad-next.desktop";
      "text/markdown" = "notepad-next.desktop";
      "application/json" = "notepad-next.desktop";

      # Images
      "image/png" = "gwenview.desktop";
      "image/jpeg" = "gwenview.desktop";
      "image/jpg" = "gwenview.desktop";
      "image/gif" = "gwenview.desktop";
      "image/bmp" = "gwenview.desktop";
      "image/webp" = "gwenview.desktop";
      "image/x-icon" = "gwenview.desktop";
      "image/svg+xml" = "gwenview.desktop";
      "image/tiff" = "gwenview.desktop";
      "image/x-xcf" = "gwenview.desktop";
      "image/x-portable-pixmap" = "gwenview.desktop";
      "image/*" = "gwenview.desktop";

      # Videos
      "video/mp4" = "vlc.desktop";
      "video/mpeg" = "vlc.desktop";
      "video/quicktime" = "vlc.desktop";
      "video/x-msvideo" = "vlc.desktop";
      "video/x-matroska" = "vlc.desktop";
      "video/webm" = "vlc.desktop";
      "video/ogg" = "vlc.desktop";
      "video/*" = "vlc.desktop";

      # Audio
      "audio/mpeg" = "vlc.desktop";
      "audio/flac" = "vlc.desktop";
      "audio/ogg" = "vlc.desktop";
      "audio/wav" = "vlc.desktop";
      "audio/x-wav" = "vlc.desktop";
      "audio/x-aac" = "vlc.desktop";
      "audio/x-m4a" = "vlc.desktop";
      "audio/mp4" = "vlc.desktop";
      "audio/x-matroska" = "vlc.desktop";
      "audio/x-ms-wma" = "vlc.desktop";
      "audio/opus" = "vlc.desktop";
      "audio/*" = "vlc.desktop";

      # Documents
      "application/pdf" = "org.gnome.Evince.desktop";
    };

    defaultApplications = {
      # URL scheme handlers
      "x-scheme-handler/http" = "zen-beta.desktop";
      "x-scheme-handler/https" = "zen-beta.desktop";

      # Text files
      "text/plain" = "notepad-next.desktop";
      "text/markdown" = "notepad-next.desktop";
      "text/x-shellscript" = "notepad-next.desktop";
      "text/x-log" = "notepad-next.desktop";
      "text/x-python" = "notepad-next.desktop";
      "text/x-rust" = "notepad-next.desktop";

      # Images
      "image/png" = "gwenview.desktop";
      "image/jpeg" = "gwenview.desktop";
      "image/jpg" = "gwenview.desktop";
      "image/gif" = "gwenview.desktop";
      "image/bmp" = "gwenview.desktop";
      "image/webp" = "gwenview.desktop";
      "image/x-icon" = "gwenview.desktop";
      "image/svg+xml" = "gwenview.desktop";
      "image/tiff" = "gwenview.desktop";
      "image/x-xcf" = "gwenview.desktop";
      "image/x-portable-pixmap" = "gwenview.desktop";
      "image/*" = "gwenview.desktop";

      # Videos
      "video/mp4" = "vlc.desktop";
      "video/mpeg" = "vlc.desktop";
      "video/quicktime" = "vlc.desktop";
      "video/x-msvideo" = "vlc.desktop";
      "video/x-matroska" = "vlc.desktop";
      "video/x-flv" = "vlc.desktop";
      "video/x-ms-wmv" = "vlc.desktop";
      "video/webm" = "vlc.desktop";
      "video/ogg" = "vlc.desktop";
      "video/*" = "vlc.desktop";

      # Audio
      "audio/mpeg" = "vlc.desktop";
      "audio/flac" = "vlc.desktop";
      "audio/ogg" = "vlc.desktop";
      "audio/wav" = "vlc.desktop";
      "audio/x-wav" = "vlc.desktop";
      "audio/x-aac" = "vlc.desktop";
      "audio/x-m4a" = "vlc.desktop";
      "audio/mp4" = "vlc.desktop";
      "audio/x-matroska" = "vlc.desktop";
      "audio/x-ms-wma" = "vlc.desktop";
      "audio/opus" = "vlc.desktop";
      "audio/*" = "vlc.desktop";

      # Documents
      "application/pdf" = "org.gnome.Evince.desktop";
    };
  };
}
